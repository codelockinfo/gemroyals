<div class="product-width-container ring-details">
  
    {% if product.type == "Rings" %}
    {% if product.metafields.custom.height != blank or product.metafields.custom.width != blank or product.metafields.custom.features != blank %}
    {%- render 'section_title' -%}
    {% endif %}
    {% endif %}

    <div class="flex displayflex-gap flex-wrap align-item-center">
       <div class="w-60 flex displayflex-gap flex-column w-100">
         <div class="flex box3-container">
          {% if product.metafields.custom.height != blank %}
           <div class="ring-detail">
              {% if product.metafields.custom.typesvg  != blank %}
                <div class="productimg-typesvg">
                  <img src="{{ product.metafields.custom.typesvg |  img_url: 'master' }}" />
                </div>
              {% endif %}
              <div class="">
                <div>Height</div>
                <div>{{ product.metafields.custom.height }}</div>
              </div>
           </div>
          {% endif %}
          {% if product.metafields.custom.width != blank %}
           <div class="ring-detail">
              {% if product.metafields.custom.typesvg  != blank %}
                <div class="productimg-typesvg">
                  <img src="{{ product.metafields.custom.typesvg |  img_url: 'master' }}" />
                </div>
              {% endif %}
              <div class="">
                <div>Width</div>
                <div>{{ product.metafields.custom.width }}</div>
              </div>
           </div>
          {% endif %}
          {% if product.metafields.custom.features != blank %}
           <div class="ring-detail">
              {% if product.metafields.custom.typesvg  != blank %}
                <div class="productimg-typesvg">
                  <img src="{{ product.metafields.custom.typesvg |  img_url: 'master' }}" />
                </div>
              {% endif %}
              <div class="">
                <div>Features</div>
                {% assign features = product.metafields.custom.features | remove: '["' | remove: '"]' %}
                {%  if features != blank %}
                  <div>
                      {% assign feature = features | split:  '","' %}
                          {% for featurevalue in feature %}
                            <div> {{ featurevalue }}</div>
                          {% endfor %}
                  </div>
                {%  endif %}
              </div>
           </div>
          {% endif %}
         </div>
         <div class="stone-detail-container">
          <h3 class="section-title tc pr flex fl_center al_center fs__24 {{style_title}}"><span class="mr__10 ml__10">Stone Details</span></h3>
           <div>
            {% assign stonedetails = product.metafields.custom.stone_details | remove: '["' | remove: '"]' %}
            {%  if stonedetails != blank %}
                  {% assign stonedetail = stonedetails | split:  '","' %}
                      {% for stone-detail in stonedetail %}
                        <div> {{ stone-detail }}</div>
                      {% endfor %}
           {%  endif %}
           </div>
         </div>
       </div>
       <div class="w-40 w-100">
        {% if product.metafields.custom.video != blank %}
          {% assign file_url = product.metafields.custom.video | file_url %}
          <video autoplay="" loop="" controls="" width="100%">
            <source src="{{ file_url  }}" type="video/mp4" id="{{ section.id }}">
          </video>
          {% else %}
          <video autoplay="" loop="" controls="" width="100%">
            <source src="https://cdn.shopify.com/videos/c/o/v/7556d74d1c094ca6b97d250827f5af9a.mp4" type="video/mp4" id="{{ section.id }}">
          </video>
        {% endif %}
       </div>
    </div>
</div>
{% schema %}
    {
      "name": "Stone Details",
      "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Testimonials"
      },
      {
        "type": "textarea",
        "id": "sub_title",
        "label": "Sub Text"
      },
