      },
      {
        "type": "paragraph",
        "content": "[Get icons Line awesome](https://icons8.com/line-awesome)"
      }
      ],
      "presets" : [
        {
          "name" : "Stone Details"
        }
      ]
    }
{% endschema %} 
<style>
  .w-60{
    width:60%;
  }
  .w-40{
    width: 40%;
  }
  .product-width-container .section-title{
    justify-content: start;
  }
  .stone-detail-container{
    background:#F9F9F9;
    padding: 20px 30px;
  }
  .displayflex-gap{
    gap: 30px;
  }
  .align-item-center{
    align-items: center;
  }
  .flex-column{
    flex-direction: column;
  }
