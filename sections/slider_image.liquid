<div class="main_section_1">
  <div class="main_section_2">
    <div class="sec_para">
      <h1>{{ section.settings.main_head }}</h1>
      <p>{{ section.settings.main_paragraph }}</p>
    </div>
    <div class="image_slider">
      <div class="swiper myprocessSwiper">
        <div class="swiper-wrapper">
          {%- for block in section.blocks -%}
            <div class="swiper-slide">
              <div class="slider_1">
                <div class="img_section_slider">
                  {% if block.settings.Custom_image != blank %}
                    <img src="{{ block.settings.Custom_image |  img_url: 'master' }}" alt="">
                  {% endif %}
                </div>
                <div class="para_section_slider">
                  <h1>{{ block.settings.Custom_h1 }}</h1>
                  <p>{{ block.settings.Custom_p }}</p>
                  <h2>{{ block.settings.Custom_text }}</h2>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col">
          <ul id="progress-bar" class="progressbar">
            <li class="active">Step 01 <br>Contact Us</li>
            <li>Step 02</li>
            <li>Step 03</li>
            <li>Step 04</li>
            <li>Step 05</li>
          </ul>
        </div>
      </div>
    </div>


  </div>
</div>


{% schema %}
  {
    "name": "Custom_Process",
    "settings": [
      {
        "type": "text",
        "id": "main_head",
        "label": "heading"
      }, {
        "type": "text",
        "id": "main_paragraph",
        "label": "paragraph"
      }
    ],
    "blocks": [
      {
        "name": "block",
        "type": "text",
        "settings": [
          {
            "type": "image_picker",
            "id": "Custom_image",
            "label": "Custom_image"
          }, {
            "type": "text",
            "id": "Custom_h1",
            "label": "Custom_h1"
          }, {
            "type": "text",
            "id": "Custom_p",
            "label": "Custom_p"
          }, {
            "type": "text",
            "id": "Custom_text",
            "label": "Custom_text"
