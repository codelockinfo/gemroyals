<script>
  var swiper = new Swiper(".myprocessSwiper", {
    slidesPerView: 1,
    loop:true,
    spaceBetween: 30,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    breakpoints :{
      990:{
        slidesPerView: 2,
        spaceBetween: 30,
      }   
    }
  });
  
  
  var progressBar = {
  Bar : $('#progress-bar'),
  Reset : function(){
    if (this.Bar){
      this.Bar.find('li').removeClass('active'); 
    }
  },
  Next: function(){
    $('#progress-bar li:not(.active):first').addClass('active');
  },
  Back: function(){
    $('#progress-bar li.active:last').removeClass('active');
  }
  }
  
  progressBar.Reset();
  
  ////
  $("#Next").on('click', function(){
  progressBar.Next();
  })
  $("#Back").on('click', function(){
  progressBar.Back();
  })
  $("#Reset").on('click', function(){
  progressBar.Reset();
  })
</script>